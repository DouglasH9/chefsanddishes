@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Chefs and Dishes!</h1>
    <div id="nav">
        <h2>Chefs | <a href="dishes">Dishes</a></h2>
        <h3><a href="addchef">Add a Chef</a></h3>
    </div>
    <h2>Check out our roster of chefs!</h2>
</div>
<table class="table">
    <thead>
    <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Birthday</th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (Chef chef in ViewBag.AllChefs)
        {
            <tr>
                <th>@chef.FName</th>
                <th>@chef.LName</th>
                <th>@chef.DofB</th>
            </tr>
        }
    }
    </tbody>
</table>
